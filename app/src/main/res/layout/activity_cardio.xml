<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="412dp"
            android:layout_height="64dp"
            android:layout_marginTop="25sp"
            android:layout_weight="1"
            android:paddingLeft="55sp"
            android:paddingTop="5sp"
            android:paddingRight="0sp"
            android:paddingBottom="0sp"
            android:text="Welcome To Cardio"
            android:textColor="@android:color/black"
            android:textSize="25sp" />

        <ImageView
            android:layout_width="134dp"

            android:layout_height="172dp"
            android:layout_margin="15sp"
            android:background="@drawable/cardiodoc1"/>

        <TextView
            android:layout_width="172dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:paddingLeft="25sp"
            android:paddingTop="5sp"
            android:paddingRight="0sp"
            android:paddingBottom="0sp"
            android:text="Appointment"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <DatePicker
            android:layout_width="350sp"
            android:layout_height="300sp"
            android:layout_marginStart="50sp"
            android:layout_marginLeft="50sp"
            android:layout_marginTop="5sp"
            android:layout_marginEnd="0sp"
            android:layout_marginRight="0sp"
            android:layout_marginBottom="0sp"
            android:background="@color/black"/>

        <Button
            android:layout_width="230dp"
            android:layout_height="45dp"
            android:layout_marginStart="65sp"
            android:layout_marginLeft="65sp"
            android:layout_marginTop="15sp"
            android:text="Fix Appiontment" />

        <ImageView
            android:layout_width="174dp"
            android:layout_height="151dp"
            android:layout_marginStart="15sp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="20sp"
            android:background="@drawable/cardiodoc2" />

        <TextView
            android:layout_width="178dp"
            android:layout_height="30sp"
            android:layout_marginStart="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="15sp"
            android:paddingLeft="10sp"
            android:text="Appointment"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <DatePicker
            android:layout_width="350sp"
            android:layout_height="300sp"
            android:layout_marginStart="50sp"
            android:layout_marginLeft="50sp"
            android:layout_marginTop="10sp"
            android:background="@color/black" />

        <Button
            android:id="@+id/button5"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="65sp"
            android:layout_marginLeft="65sp"
            android:layout_marginTop="10sp"
            android:layout_weight="1"
            android:text="Fiix appointment" />

    </LinearLayout>
</ScrollView>